<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.appointment.step3.AppointmentStepThirdFragment">

    <Toolbar
        android:id="@+id/toolbar"
        style="@style/tab_layout">

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/back_button_toolbar"
            style="@style/tab_layout_back_button" />

        <TextView
            style="@style/tab_layout_title_text"
            android:text="@string/step_third"/>

        <Button
            android:id="@+id/button_on_all_doctors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_upper_little"
            android:paddingHorizontal="@dimen/margin_upper_medium"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:background="@drawable/shape_orange_button"
            android:layout_gravity="end"
            android:textSize="@dimen/text_little"
            android:text="@string/by_doctor"
            />
    </Toolbar>
    <View style="@style/tab_layout_bottom_line" />

</LinearLayout>