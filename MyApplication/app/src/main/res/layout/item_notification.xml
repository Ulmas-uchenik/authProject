<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/margin_upper_little"
    android:paddingTop="@dimen/margin_upper_little"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_upper_little"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/is_readed_view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/orange"
        />

    <TextView
        android:id="@+id/content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ваш номер телефона подтвержден"
        android:textSize="@dimen/text_little"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        />

    <View style="@style/tab_layout_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/content_text_view"
        android:layout_marginTop="@dimen/margin_upper_little"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>