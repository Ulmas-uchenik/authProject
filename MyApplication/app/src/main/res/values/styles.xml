<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/purple_200</item>
        <item name="itemTextColor">@color/purple_500</item>
        <item name="tabIconTint">@color/black</item>
    </style>

    <style name="CardTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Corner">
        <item name="cornerSize">20sp</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="color">@color/gray</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:textSize">22sp</item>
        <item name="color">@color/gray</item>
    </style>

    <style name="TabLayoutChooseBranch">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="android:paddingTop">@dimen/margin_upper_little</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:background">@color/background_gray</item>
        <item name="tabMinWidth">350dp</item>
        <item name="tabTextColor">@color/light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>
</resources>