<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/purple_200</item>
        <item name="itemTextColor">@color/purple_500</item>
        <item name="tabIconTint">@color/black</item>
    </style>

    <style name="CardTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Corner">
        <item name="cornerSize">20sp</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="color">@color/gray</item>
    </style>

<!--    tab layout-->
    <style name="TabLayoutText">
        <item name="android:textSize">22sp</item>
        <item name="color">@color/gray</item>
    </style>

    <style name="TabLayoutTextDoctor">
        <item name="android:textSize">@dimen/text_little</item>
    </style>

    <style name="TabLayoutChooseBranch">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:background">@color/background_gray</item>
        <item name="tabMinWidth">350dp</item>
        <item name="tabTextColor">@color/light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TabLayoutChooseDoctorAndServices">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMinWidth">120dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabLayoutTextDoctor</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="android:background">@color/background_white</item>
        <item name="tabTextColor">@color/light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="tabIndicator">@drawable/tab_doctor_indicator</item>
    </style>

    <style name="tab_layout_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/little_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="tab_layout_back_button">
        <item name="android:layout_width">@dimen/tab_layout_back_button_width</item>
        <item name="android:layout_height">@dimen/tab_layout_back_button_height</item>
        <item name="android:background">@drawable/baseline_arrow_back_24</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="tab_layout_bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B1B1B1</item>
    </style>
</resources>